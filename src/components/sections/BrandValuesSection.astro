    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {values.map(value => (
        <div class="text-center">
          <div class="w-20 h-20 bg-brand-amber/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name={value.icon} class="w-8 h-8 text-brand-amber" />
          </div>
          <h3 class="text-2xl font-serif font-semibold text-brand-indigo mb-4">
            {value.title}
          </h3>
          <p class="text-brand-indigo/70 leading-relaxed">
            {value.description}

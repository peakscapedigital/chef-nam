---
import { Icon } from 'astro-icon/components';

export interface Props {
  values?: Array<{
    icon: string;
    title: string;
    description: string;
  }>;
}

const { values = [
  {
    icon: "mdi:leaf",
    title: "Local Excellence",
    description: "Fresh, seasonal ingredients from local Michigan farms and suppliers to support our community."
  },
  {
    icon: "mdi:star",
    title: "Uncompromising Quality", 
    description: "From ingredient selection to final presentation, every dish meets our exacting standards."
  },
  {
    icon: "mdi:bullseye-arrow",
    title: "Seamless Service",
    description: "Professional, attentive service that anticipates your needs so you can enjoy your event."
  }
] } = Astro.props;
---

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .animate-scroll {
    animation: scroll 30s linear infinite;
  }
  
  .animate-scroll:hover {
    animation-play-state: paused;
  }
</style>

<section class="py-20 bg-brand-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-brand-indigo mb-6">
        Chef Nam's Promise

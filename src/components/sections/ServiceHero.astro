---
import Breadcrumb, { type BreadcrumbItem } from '../ui/Breadcrumb.astro';

export interface ResponsiveImage {
  src640: string;
  src1024: string;
  src1920: string;
}

export interface Props {
  title: string;
  subtitle: string;
  description: string;
  backgroundImage: string;
  backgroundAlt: string;
  breadcrumbs?: BreadcrumbItem[];
  /** Responsive image sources for better mobile performance */
  responsiveImages?: ResponsiveImage;
}

const {
  title,
  subtitle,
  description,
  backgroundImage,
  backgroundAlt,
  breadcrumbs,
  responsiveImages
} = Astro.props;

// Build srcset if responsive images are provided
const srcset = responsiveImages
  ? `${responsiveImages.src640} 640w, ${responsiveImages.src1024} 1024w, ${responsiveImages.src1920} 1920w`
  : undefined;

// Sizes attribute for responsive images (hero is always full viewport width)
const sizes = responsiveImages
  ? "100vw"
  : undefined;

// Use the largest image as the fallback src
const imgSrc = responsiveImages ? responsiveImages.src1920 : backgroundImage;
---

<section class="relative pt-32 pb-20 overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src={imgSrc}
      srcset={srcset}
      sizes={sizes}
      alt={backgroundAlt}
      class="w-full h-full object-cover"
      loading="eager"
      fetchpriority="high"
      decoding="async"
    />
    <!-- Blue tint overlay to match homepage -->
    <div class="absolute inset-0" style="background: linear-gradient(to right, rgba(44, 62, 80, 0.7), rgba(44, 62, 80, 0.5))"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    {breadcrumbs && <Breadcrumb items={breadcrumbs} />}

    <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-white leading-none mb-8">
      <span class="text-white font-serif">{title}</span><br />
      <span class="text-5xl md:text-7xl lg:text-8xl" style="color: var(--brand-amber); font-family: 'Caveat', cursive;">{subtitle}</span>
    </h1>
    <p class="text-xl text-white/90 max-w-3xl mx-auto leading-relaxed">
      {description}
    </p>
  </div>
</section>
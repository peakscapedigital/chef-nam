---
import Button from '../ui/Button.astro';
import { urlFor } from '../../utils/sanity';

export interface Props {
  hero?: {
    headline: string;
    subheading: string;
    backgroundImage?: {
      asset: any;
      alt: string;
    };
    primaryCTA: string;
    secondaryCTA: string;
  };
}

const { hero } = Astro.props;

const defaultHero = {
  headline: "Catering With Care For Moments That Matter",
  subheading: "Chef Nam blends her deep appreciation for global flavors with thoughtful hospitality, crafting experiences that make people feel seen, celebrated, and well-fed.",
  primaryCTA: "Get Your Quote",
  secondaryCTA: "View Menu"
};

const heroData = hero || defaultHero;
const backgroundImageUrl = hero?.backgroundImage ? urlFor(hero.backgroundImage.asset).url() : '/hero-bg.jpg';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img 
      src={backgroundImageUrl}
      alt={hero?.backgroundImage?.alt || "Chef Nam catering beautiful Thai fusion dishes"}
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-brand-indigo/40"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
    <h1 class="text-4xl md:text-6xl font-serif font-bold mb-6 leading-tight">
      {heroData.headline}
    </h1>
    <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed">
      {heroData.subheading}
    </p>
    
    <!-- Trust Signals -->
    <div class="flex items-center justify-center gap-4 mb-8 text-sm">
      <div class="flex items-center gap-1">
        <span class="text-yellow-400">★★★★★</span>
        <span>5.0 Rating</span>
      </div>
      <span class="text-brand-white/60">•</span>
      <span>15+ Years Experience</span>
      <span class="text-brand-white/60">•</span>
      <span>Ann Arbor Local</span>
    </div>
    
    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button 
        href="/contact" 
        variant="primary" 
        size="lg"
        class="text-lg px-8 py-4"
      >
        {heroData.primaryCTA}
      </Button>
      <Button 
        href="/services" 
        variant="outline" 
        size="lg"
        class="text-lg px-8 py-4 border-white text-white hover:bg-white hover:text-brand-indigo"
      >
        {heroData.secondaryCTA}
      </Button>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
    <div class="animate-bounce">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>
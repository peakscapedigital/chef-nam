---
import { Icon } from 'astro-icon/components';
import Card from '../ui/Card.astro';

export interface Props {
  services?: Array<{
    icon: string;
    title: string;
    description: string;
    features: string[];
    link: string;
    image: string;
  }>;
}

const { services = [
  {
    icon: "mdi:office-building",
    title: "Corporate Events",
    description: "Professional catering solutions for business meetings, conferences, corporate parties, and office events. Impress your clients and colleagues with our sophisticated menu options.",
    features: [
      "Business lunch & breakfast",
      "Conference catering", 
      "Office parties & celebrations",
      "Client entertainment"
    ],
    link: "/services/corporate",
    image: "https://images.unsplash.com/photo-1511795409834-ef04bbd61622?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
  },
  {
    icon: "mdi:party-popper",
    title: "Social Gatherings",
    description: "Create memorable moments for your personal celebrations, family gatherings, and special occasions. From birthday parties to anniversary celebrations, we make every event special.",
    features: [
      "Birthday & anniversary parties",
      "Family reunions",
      "Holiday celebrations", 
      "Graduation parties"
    ],
    link: "/services/social",
    image: "/images/social-gatherings-800.jpg"
  },
  {
    icon: "mdi:heart",
    title: "Wedding Celebrations",
    description: "Make your wedding day truly magical with our exquisite wedding catering services. From intimate ceremonies to grand receptions, we create culinary experiences as beautiful as your love story.",
    features: [
      "Wedding receptions",
      "Rehearsal dinners",
      "Bridal showers",
      "Custom wedding menus"
    ],
    link: "/services/weddings",
    image: "https://images.unsplash.com/photo-1519225421980-715cb0215aed?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
  }
] } = Astro.props;
---

<section class="py-20 bg-brand-cream">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-brand-indigo mb-6">
        Professional Ann Arbor Catering Services
      </h2>
      <p class="text-xl text-brand-indigo/70 max-w-3xl mx-auto">
        From intimate gatherings to grand celebrations, we create culinary experiences that leave lasting impressions
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {services.map(service => (
        <Card variant="service" class="transform transition-all duration-300 hover:scale-105 hover:shadow-brand-lg flex flex-col h-full">
          <div class="w-full h-48 mb-6 rounded-lg overflow-hidden shadow-brand">
            <img 
              src={service.image} 
              alt={`${service.title} catering service`}
              class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
              loading="lazy"
              width="800"
              height="600"
            />
          </div>
          <div class="mb-4">
            <h3 class="text-2xl font-serif font-semibold text-brand-indigo">
              {service.title}
            </h3>
          </div>
          <p class="text-brand-indigo/70 mb-6 leading-relaxed">
            {service.description}
          </p>
          <ul class="space-y-2 mb-6 flex-grow">
            {service.features.map(feature => (
              <li class="flex items-center text-brand-indigo/80">
                <Icon name="mdi:check-circle" class="w-4 h-4 text-brand-amber mr-3" />
                {feature}
              </li>
            ))}
          </ul>
          <a href={service.link} class="text-brand-amber font-semibold hover:text-brand-amber/80 transition-colors mt-auto">
            Learn More â†’
          </a>
        </Card>
      ))}
    </div>
  </div>
</section>
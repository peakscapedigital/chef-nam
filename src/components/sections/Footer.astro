---
export interface Props {
  logoUrl?: string;
  logoAlt?: string;
}

const { logoUrl, logoAlt = 'Chef Nam Catering' } = Astro.props;
---

<footer class="bg-brand-indigo text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-6 gap-8">
      <!-- Brand -->
      <div class="lg:col-span-2">
        {logoUrl ? (
          <img 
            src={logoUrl}
            alt={logoAlt}
            class="h-16 w-auto mb-4"
            loading="lazy"
          />
        ) : (
          <h3 class="text-2xl font-serif font-bold mb-4">Chef Nam Catering</h3>
        )}
        <p class="text-white/80 mb-4 max-w-sm">
          Full service catering for weddings, corporate events, and special occasions throughout Ann Arbor and Michigan.
        </p>
        <div class="flex space-x-4">
          <a href="https://www.facebook.com/chefnamcatering" target="_blank" rel="noopener noreferrer" class="text-white/80 hover:text-white transition-colors">
            <span class="sr-only">Facebook</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">

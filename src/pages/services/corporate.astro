  <main>
    <!-- Hero Section -->
    <ServiceHero
      title="Corporate & Office Catering"
      subtitle="That Delivers"
      description="Reliable, professional catering for Ann Arbor businesses. From executive lunches to company celebrations, we make your corporate events seamless and memorable."
      backgroundImage="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80"
      backgroundAlt="Professional corporate catering buffet setup"
      breadcrumbs={[
        { label: "Home", href: "/" },
        { label: "Services", href: "/services" },
        { label: "Corporate Catering" }
      ]}
    />

    <!-- Corporate Services Overview -->

  <!-- Breadcrumb Navigation -->
  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://chefnamcatering.com"
      },
      {
        "@type": "ListItem",
        "position": 2,

---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout 
  title="FAQ Component Testing - Chef Nam Catering"
  description="Testing different FAQ component styles with various backgrounds and animations"
>
  <meta slot="head" name="robots" content="noindex, nofollow" />
  <main>
    <!-- Hero -->
    <section class="pt-32 pb-16 bg-gradient-to-br from-brand-indigo to-brand-indigo/80">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-serif font-bold text-white mb-6">
          FAQ Component Testing
        </h1>
        <p class="text-xl text-white/90">
          Exploring different FAQ layouts, animations, and background treatments
        </p>
      </div>
    </section>

    <!-- FAQ Style 1: Accordion with Gradient Background -->
    <section class="py-20 relative overflow-hidden">
      <!-- Animated Gradient Background -->
      <div class="absolute inset-0 bg-gradient-to-br from-brand-cream via-white to-brand-amber/10"></div>
      <div class="absolute inset-0">
        <div class="absolute top-20 left-20 w-72 h-72 bg-brand-amber/10 rounded-full filter blur-3xl animate-pulse"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-brand-indigo/10 rounded-full filter blur-3xl animate-pulse animation-delay-2000"></div>
      </div>

      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-brand-indigo mb-6">
            Style 1: Animated Accordion
          </h2>
          <p class="text-xl text-brand-indigo/70">
            Smooth expand/collapse with floating gradient background
          </p>
        </div>

        <div class="space-y-4">
          {[
            { icon: 'mdi:calendar-clock', question: 'How far in advance should I book?', answer: 'We recommend booking 4-6 weeks in advance for most events, and 2-3 months for weddings during peak season.' },
            { icon: 'mdi:currency-usd', question: 'What is your pricing structure?', answer: 'Our pricing is customized based on your event size, menu selections, and service style. We offer transparent per-person pricing starting at $18 for casual events.' },
            { icon: 'mdi:leaf', question: 'Do you accommodate dietary restrictions?', answer: 'Absolutely! We specialize in accommodating vegetarian, vegan, gluten-free, and allergy-specific needs.' }
          ].map((faq, index) => (
            <div class="faq-item-animated" style={`animation-delay: ${index * 100}ms`}>
              <button class="w-full bg-white/90 backdrop-blur-sm border border-white/50 rounded-2xl p-6 text-left hover:shadow-xl transition-all duration-500 group">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-brand-amber to-brand-amber/60 rounded-full flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform">
                      <Icon name={faq.icon} class="w-6 h-6 text-white" />
                    </div>
                    <h3 class="text-lg font-semibold text-brand-indigo">{faq.question}</h3>
                  </div>
                  <Icon name="mdi:chevron-down" class="w-6 h-6 text-brand-indigo/50 transition-transform duration-300 group-hover:rotate-180" />
                </div>
                <div class="overflow-hidden max-h-0 group-hover:max-h-96 transition-all duration-500">
                  <p class="mt-4 ml-16 text-brand-indigo/70 pr-6">{faq.answer}</p>
                </div>
              </button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ Style 2: Two Column with Textured Background -->
    <section class="py-20 relative">
      <!-- Textured Pattern Background -->
      <div class="absolute inset-0 bg-brand-indigo"></div>
      <div class="absolute inset-0 opacity-10">
        <div class="w-full h-full" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,255,255,.1) 35px, rgba(255,255,255,.1) 70px)"></div>
      </div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-6">
            Style 2: Two Column with Hover Effects
          </h2>
          <p class="text-xl text-white/80">
            Grid layout with 3D transform animations
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {[
            { question: 'What areas do you serve?', answer: 'We serve Ann Arbor, Ypsilanti, Dexter, Saline, and all of Washtenaw County.' },
            { question: 'Do you provide tastings?', answer: 'Yes! We offer complimentary tastings for weddings and events over 50 guests.' },
            { question: 'What\'s your minimum order?', answer: 'Our minimum order is 10 people for drop-off catering and 25 people for full-service events.' },
            { question: 'What\'s included in full-service?', answer: 'Full-service includes menu planning, food preparation, delivery, setup, professional service staff, and complete cleanup.' },
            { question: 'Do you provide rentals?', answer: 'We can coordinate rentals including tables, chairs, linens, and dinnerware through our trusted partners.' },
            { question: 'What\'s your cancellation policy?', answer: 'Cancellations made 30+ days before the event receive a full refund. Within 30 days, we retain the deposit.' }
          ].map((faq, index) => (
            <div 
              class="faq-card-3d bg-white/95 backdrop-blur-sm rounded-2xl p-6 transform transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl"
              style={`animation: slideInUp 0.6s ease-out ${index * 100}ms both`}
            >
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 bg-brand-amber rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <span class="text-white font-bold">?</span>
                </div>
                <div>
                  <h3 class="font-semibold text-brand-indigo mb-3">{faq.question}</h3>
                  <p class="text-brand-indigo/70 text-sm leading-relaxed">{faq.answer}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ Style 3: Category Cards with Parallax Background -->
    <section class="py-20 relative overflow-hidden">
      <!-- Parallax Background Elements -->
      <div class="absolute inset-0 bg-gradient-to-br from-white via-brand-cream/20 to-white"></div>
      <div class="parallax-container absolute inset-0">
        <div class="parallax-element absolute top-10 left-10 w-64 h-64 bg-brand-amber/5 rounded-full"></div>
        <div class="parallax-element absolute bottom-10 right-10 w-96 h-96 bg-brand-indigo/5 rounded-full"></div>
        <div class="parallax-element absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-brand-cream/30 rounded-full"></div>
      </div>

      <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-brand-indigo mb-6">
            Style 3: Interactive Category Cards
          </h2>
          <p class="text-xl text-brand-indigo/70">
            Filterable FAQs with smooth transitions
          </p>
        </div>

        <!-- Category Filters -->
        <div class="flex flex-wrap justify-center gap-3 mb-12">
          {['All', 'General', 'Pricing', 'Services', 'Dietary'].map((category, index) => (
            <button 
              class={`category-btn px-6 py-3 rounded-full font-semibold transition-all duration-300 transform hover:scale-105 ${
                index === 0 
                  ? 'bg-brand-amber text-white shadow-lg' 
                  : 'bg-white text-brand-indigo border border-brand-indigo/20 hover:bg-brand-indigo hover:text-white hover:shadow-lg'
              }`}
              data-category={category.toLowerCase()}
            >
              {category}
            </button>
          ))}
        </div>

        <!-- FAQ Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {[
            { category: 'general', question: 'Can you work with my venue\'s kitchen?', answer: 'Yes! We\'re experienced working in various venue kitchens throughout Ann Arbor.' },
            { category: 'services', question: 'Do you offer bar service?', answer: 'We can provide professional bartending service and coordinate with licensed beverage suppliers.' },
            { category: 'pricing', question: 'Are there additional fees?', answer: 'Our quotes are transparent and include all service fees. Rentals and gratuity are additional.' },
            { category: 'dietary', question: 'Can you accommodate allergies?', answer: 'Absolutely! We take allergies seriously and can prepare safe, delicious alternatives.' }
          ].map((faq, index) => (
            <div 
              class="faq-category-card group relative"
              data-category={faq.category}
              style={`animation: fadeInScale 0.5s ease-out ${index * 100}ms both`}
            >
              <div class="absolute inset-0 bg-gradient-to-r from-brand-amber/20 to-brand-indigo/20 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="relative bg-white rounded-2xl p-8 shadow-md hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1">
                <div class="flex items-start space-x-4">
                  <div class="w-14 h-14 bg-gradient-to-br from-brand-amber to-brand-indigo rounded-xl flex items-center justify-center flex-shrink-0 group-hover:rotate-6 transition-transform">
                    <span class="text-white font-bold text-xl">Q</span>
                  </div>
                  <div>
                    <span class="text-xs font-semibold text-brand-amber uppercase tracking-wider">{faq.category}</span>
                    <h3 class="text-lg font-semibold text-brand-indigo mt-1 mb-3">{faq.question}</h3>
                    <p class="text-brand-indigo/70 leading-relaxed">{faq.answer}</p>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Contact CTA -->
        <div class="mt-16 text-center">
          <div class="inline-block p-8 bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl">
            <p class="text-brand-indigo/70 mb-4">Still have questions?</p>
            <a href="/contact" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-brand-amber to-brand-amber/80 text-white font-semibold rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-300">
              <Icon name="mdi:message-text" class="w-5 h-5 mr-2" />
              Contact Us Directly
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Style 4: Minimalist with Micro-animations -->
    <section class="py-20 bg-white">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-brand-indigo mb-6">
            Style 4: Minimalist Expandable
          </h2>
          <p class="text-xl text-brand-indigo/70">
            Clean design with subtle micro-interactions
          </p>
        </div>

        <div class="divide-y divide-brand-indigo/10">
          {[
            { question: 'How do I get started?', answer: 'Simply contact us through our form or call us directly. We\'ll discuss your event details and create a custom proposal.' },
            { question: 'Can I make changes to my order?', answer: 'Yes! We\'re flexible and can accommodate changes up to 72 hours before your event.' },
            { question: 'Do you deliver?', answer: 'Yes, we offer delivery and full setup services throughout our service area.' },
            { question: 'What about leftovers?', answer: 'We provide containers for leftovers and can arrange for donation to local shelters if preferred.' }
          ].map((faq, index) => (
            <div class="faq-minimal py-6 group cursor-pointer">
              <div class="flex items-center justify-between">
                <h3 class="text-lg font-medium text-brand-indigo group-hover:text-brand-amber transition-colors duration-300">
                  {faq.question}
                </h3>
                <div class="ml-6 flex-shrink-0">
                  <Icon name="mdi:plus-circle-outline" class="w-6 h-6 text-brand-indigo/40 group-hover:text-brand-amber group-hover:rotate-45 transition-all duration-300" />
                </div>
              </div>
              <div class="mt-4 text-brand-indigo/70 opacity-0 max-h-0 group-hover:opacity-100 group-hover:max-h-96 transition-all duration-500 overflow-hidden">
                {faq.answer}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

  </main>

  <style>
    /* Animations */
    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInScale {
      from {
        opacity: 0;
        transform: scale(0.95);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    .faq-item-animated {
      animation: slideInUp 0.6s ease-out both;
    }

    .animation-delay-2000 {
      animation-delay: 2s;
    }

    /* 3D Card Effect */
    .faq-card-3d {
      transform-style: preserve-3d;
      transition: transform 0.6s;
    }

    .faq-card-3d:hover {
      transform: translateY(-8px) rotateX(-2deg);
    }

    /* Parallax Effect */
    .parallax-element {
      will-change: transform;
      transition: transform 0.6s ease-out;
    }

    /* Smooth Accordion */
    .faq-item-animated button {
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Category Filter Logic */
    .faq-category-card {
      transition: opacity 0.3s, transform 0.3s;
    }

    .faq-category-card.hidden {
      opacity: 0;
      transform: scale(0.8);
      display: none;
    }
  </style>

  <script>
    // Category Filter Functionality
    document.addEventListener('DOMContentLoaded', () => {
      const categoryBtns = document.querySelectorAll('.category-btn');
      const faqCards = document.querySelectorAll('.faq-category-card');

      categoryBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const category = btn.getAttribute('data-category');
          
          // Update button states
          categoryBtns.forEach(b => {
            b.classList.remove('bg-brand-amber', 'text-white', 'shadow-lg');
            b.classList.add('bg-white', 'text-brand-indigo', 'border', 'border-brand-indigo/20');
          });
          btn.classList.remove('bg-white', 'text-brand-indigo', 'border', 'border-brand-indigo/20');
          btn.classList.add('bg-brand-amber', 'text-white', 'shadow-lg');

          // Filter cards
          faqCards.forEach(card => {
            const cardCategory = card.getAttribute('data-category');
            if (category === 'all' || cardCategory === category) {
              card.classList.remove('hidden');
            } else {
              card.classList.add('hidden');
            }
          });
        });
      });

      // Parallax Effect
      const parallaxElements = document.querySelectorAll('.parallax-element');
      
      window.addEventListener('scroll', () => {
        const scrolled = window.pageYOffset;
        parallaxElements.forEach((element, index) => {
          const speed = 0.5 + (index * 0.1);
          element.style.transform = `translateY(${scrolled * speed}px)`;
        });
      });
    });
  </script>
</Layout>
---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Color Test">
  <meta slot="head" name="robots" content="noindex, nofollow" />
  <main class="p-8">
    <h1 class="text-4xl font-bold mb-8">Brand Color Test</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="p-6 bg-brand-indigo text-white rounded-lg">
        <h2 class="text-xl font-bold mb-2">Brand Indigo</h2>
        <p>#2C3E50</p>
        <p>Primary brand color</p>
      </div>
      
      <div class="p-6 bg-brand-amber text-white rounded-lg">
        <h2 class="text-xl font-bold mb-2">Brand Amber</h2>
        <p>#F39C12</p>
        <p>Accent color for CTAs</p>
      </div>
      
      <div class="p-6 bg-brand-cream text-brand-indigo rounded-lg border">
        <h2 class="text-xl font-bold mb-2">Brand Cream</h2>
        <p>#ECF0F1</p>
        <p>Supporting background</p>
      </div>
      
      <div class="p-6 bg-brand-white text-brand-indigo rounded-lg border">
        <h2 class="text-xl font-bold mb-2">Brand White</h2>
        <p>#FFFEFA</p>
        <p>Off-white background</p>
      </div>
    </div>
    
    <div class="mt-8">
      <h2 class="text-2xl font-bold text-brand-indigo mb-4">Typography Test</h2>
      <h3 class="text-xl font-serif text-brand-indigo mb-2">Playfair Display (Serif)</h3>
      <p class="font-sans text-brand-indigo/80 mb-4">Montserrat (Sans-serif) - Body text</p>
      <p class="font-script text-brand-amber text-lg">Caveat (Script) - Special text</p>
    </div>
  </main>
</Layout>
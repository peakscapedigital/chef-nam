---
// Redirect to Sanity Studio running on port 3333
const STUDIO_URL = 'http://localhost:3333';

return new Response(null, {
  status: 302,
  headers: {
    Location: STUDIO_URL
  }
});
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>Redirecting to Sanity Studio...</title>
  <script>
    window.location.href = 'http://localhost:3333';
  </script>
</head>
<body>
  <p>Redirecting to Sanity Studio...</p>
  <p>If you are not redirected automatically, <a href="http://localhost:3333">click here</a>.</p>
</body>
</html>